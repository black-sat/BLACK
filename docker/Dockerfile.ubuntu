ARG VERSION
FROM ubuntu:$VERSION

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y make cmake gdb pkg-config git git-lfs

RUN apt-get update && \
    apt-get install -y libfmt-dev libimmer-dev catch2 libz3-dev libcvc5-dev

ARG CC=gcc
ARG CXX=g++
ENV CC=$CC
ENV CXX=$CXX

RUN apt-get install -y $CC $CXX

ENTRYPOINT ["/usr/bin/env", "--"]